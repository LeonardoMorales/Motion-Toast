<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_motionToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motion Toast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_darkToast" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_colorMotionToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color Motion Toast"
        app:layout_constraintBottom_toTopOf="@+id/btn_darkColorToast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_darkToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Toast"
        app:layout_constraintBottom_toTopOf="@+id/btn_motionToast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_darkColorToast" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_darkColorToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Color Toast"
        app:layout_constraintBottom_toTopOf="@+id/btn_darkToast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_colorMotionToast" />

</androidx.constraintlayout.widget.ConstraintLayout>